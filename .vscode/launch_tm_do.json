{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--taillard",
                "--taillard-file",
                "/workspaces/job-shop-simulator/per_jsp/data/taillard_instances/ta01.txt",
                "--algorithm",
                "tsetlin",
                "--visualize",
                "--output-prefix",
                "ta01_tm_episode_10",
                "--episodes=10"
            ]
        }
    ]
}